<Window x:Class="PracaNaLekcji_Bookmarks.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracaNaLekcji_Bookmarks"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Tytuł"/>
        <TextBox x:Name="titleEntry"/>

        <TextBlock Text="Opis"/>
        <TextBox x:Name="descEntry"/>
        
        <TextBlock Text="Autor"/>
        <TextBox x:Name="authorEntry"/>

        <TextBlock Text="Data wydania"/>
        <DatePicker x:Name="publishedEntry"/>

        <Button Content="Dodaj" Click="AddBook"/>
    </StackPanel>
</Window>
