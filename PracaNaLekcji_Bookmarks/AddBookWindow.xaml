<Window x:Class="PracaNaLekcji_Bookmarks.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracaNaLekcji_Bookmarks"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="350" Width="400">
    <StackPanel Background="LightBlue">
        <StackPanel Margin="10">
            <TextBlock Text="Tytuł"/>
            <TextBox x:Name="titleEntry" Margin="10" HorizontalAlignment="Left" Width="200"/>

            <TextBlock Text="Opis"/>
            <TextBox x:Name="descEntry" Margin="10" HorizontalAlignment="Left" Width="200"/>

            <TextBlock Text="Autor"/>
            <TextBox x:Name="authorEntry" Margin="10" HorizontalAlignment="Left" Width="200"/>
        </StackPanel>

        <Button Content="Dodaj" Click="AddBook" Background="AliceBlue" Width="200"/>
    </StackPanel>
</Window>
